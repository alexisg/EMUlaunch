//FIGURE OUT STAGE WIDTHclass ScreenSize {	private var winSize;	private var winWidth:Number;	private var winHeight:Number;	private var size_factorX:Number;	private var size_factorY:Number;	private var stageHeightMax:Number;	private var stageHeightMin:Number;	private var stageWidthMax:Number;	private var stageWidthMin:Number;	public function get heightMax():Number {		return stageHeightMax;	}	public function get widthMax():Number {		return stageWidthMax;	}	public function get heightMin():Number {		return stageHeightMin;	}	public function get widthMin():Number {		return stageWidthMin;	}	function ScreenSize() {		winSize = mWindow.getSize();		winWidth = winSize.x;		winHeight = winSize.y;				size_factorX = Stage.width/winWidth;		size_factorY = Stage.height/winHeight;		if (size_factorX<size_factorY) {			stageHeightMax = Stage.height;			stageHeightMin = 0;			stageWidthMax = winWidth*size_factorY;			stageWidthMin = ((stageWidthMax-Stage.width)/2)*-1;		} else if (size_factorX>size_factorY) {			stageHeightMax = winHeight*size_factorX;			stageHeightMin = 0;			stageWidthMax = Stage.width;			stageWidthMin = 0;		} else {			stageWidthMin = 0;			stageWidthMax = Stage.width;			stageHeightMin = 0;			stageHeightMax = Stage.height;		}	}}